{
  "name": "ideabox",
  "version": "1.0.0",
  "description": "Ideabox is a simple application that allows users to create a pool of ideas and promote collaboration.",
  "main": "index.js",
  "engines": {
    "node": "6.11.1"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "scripts": {
    "start:server": "nodemon ./node_modules/.bin/babel-node ./server/app.js",
    "start": "NODE_ENV=production node server/dist/app.js",
    "start:dev": "NODE_ENV=development nodemon --watch server --exec babel-node ./server/app.js",
    "build:server": "rimraf server/dist/ && babel ./server --out-dir ./server/dist/ --copy-files",
    "build:client": "webpack -p --config webpack.prod.js",
    "build": "npm run build:server && npm run build:client",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postinstall": "[\"$NODE_ENV\" != production ] && exit 0; npm run build",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text ./node_modules/.bin/mocha --compilers js:babel-core/register --timeout 50000 server/test/*.test.js",
    "e2e-setup": "selenium-standalone install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dannytebj/IdeaBox.git"
  },
  "author": "Daniel Atebije",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Dannytebj/IdeaBox/issues"
  },
  "homepage": "https://github.com/Dannytebj/IdeaBox#readme",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^22.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bcrypt": "^1.0.3",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "color": "^2.0.1",
    "colors": "^1.1.2",
    "coveralls": "^3.0.0",
    "crypto": "^1.0.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "events": "^1.1.1",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "faker": "^4.1.0",
    "flux": "^3.1.3",
    "history": "^4.7.2",
    "http": "0.0.0",
    "jest": "^22.0.3",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^8.1.0",
    "keymirror": "^0.1.1",
    "markdown-to-jsx": "^6.2.1",
    "mocha": "^3.5.3",
    "moment": "^2.19.4",
    "mongoose": "^4.10.8",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.0",
    "node-sass": "^4.7.2",
    "nodemailer": "^4.4.0",
    "nyc": "^11.3.0",
    "path": "^0.12.7",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-image": "^1.3.1",
    "react-paginate": "^5.0.0",
    "react-router-dom": "^4.1.1",
    "react-test-renderer": "^15.6.2",
    "sass-loader": "^6.0.6",
    "sinon": "^4.1.3",
    "style-loader": "^0.19.0",
    "toastr": "^2.1.2",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^.+\\.(s?css|less)$": "<rootDir>/client/src/__test__/mocks/styleMock.js",
      "AppStore": "<rootDir>/client/src/js/stores/AppStore.js",
      "AppActions": "<rootDir>/client/src/js/actions/AppActions.js",
      "localStorage": "<rootDir>/client/src/__test__/mocks/localStorageMock.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/vendors/**",
      "!**/public/**",
      "!**/server/**",
      "!**/server/test/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!bundle.js",
      "!client/src/index.js",
      "!client/src/js/components/Routes.jsx",
      "!webpack.common.js",
      "!webpack.prod.js",
      "!webpack.dev.js",
      "!nightwatch.conf.js",
      "!client/src/__test__/mocks/**",
      "!client/src/js/utils/AppApi.js",
      "!client/src/js/utils/SetTokenHeader.js",
      "!client/src/js/components/Groups.jsx"
    ],
    "setupFiles": [
      "<rootDir>/client/src/__test__/mocks/localStorageMock.js",
      "<rootDir>/client/src/__test__/mocks/jqueryMocks.js"
    ],
    "verbose": false
  },
  "devDependencies": {
    "babel-plugin-add-module-exports": "^0.2.1",
    "colors": "^1.1.2",
    "css-loader": "^0.28.7",
    "eslint": "^4.12.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.5",
    "image-webpack-loader": "^3.4.2",
    "nodemon": "^1.12.1",
    "prop-types": "^15.6.0",
    "sass-loader": "^6.0.6",
    "scss-loader": "0.0.1",
    "selenium-standalone": "^6.12.0"
  }
}
